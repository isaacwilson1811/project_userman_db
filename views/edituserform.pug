doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Edit User
  body
    div(style="margin:0 auto; border:1px solid gray; width:90%; height:100%; padding:32px;")
      p
        a(href="/") Go Back
      h1 Editing User ID #{_id}
      form(action="/updateuser/"+_id, method="post") 
        input(type="text", name=_id, placeholder=_id, disabled)
        input(type="text", name="firstName", value=firstName, required)
        input(type="text", name="lastName", value=lastName, required)
        input(type="text", name="email", value=email, required)
        input(type="number", name="age", value=age, required)
        input(type="submit", value="submit")